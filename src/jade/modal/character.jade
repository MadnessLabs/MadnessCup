ion-modal-view.modal-character
    ion-header-bar.bar-positive
        h1.title Character Selection
        a.button.button-icon.ion-close-round(ng-click="ctrl.closeModal()")
    ion-content
        ion-list
            ion-item.item-input
                i.icon.ion-search.placeholder-icon
                input(type="search" placeholder="Search" ng-model="ctrl.characterSearch")
            ion-item.item-avatar(ng-repeat="character in ctrl.characters | filter: ctrl.characterSearch" ng-click="ctrl.setCharacter(character)") 
                img(ng-src="img/character/{{character.image}}")
                h2 {{character.name}}
